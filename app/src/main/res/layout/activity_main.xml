<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kws.superawesome.tv.kwsdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CreateUser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Create"
            android:onClick="createNewUser"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Login"
            android:onClick="loginUser"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Auth"
            android:onClick="authUser"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Logout"
            android:onClick="logoutUser"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/RandomName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Rnd name"
            android:onClick="generateRandomName"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/RegisterUser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Register"
            android:onClick="registerAction"/>
        <Button
            android:id="@+id/UnregisterUser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="UnRegister"
            android:onClick="unregisterAction"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CheckIfRegistered"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Check if registered"
            android:onClick="checkRegisteredAction"/>
        <Button
            android:id="@+id/GetUser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Get User Details"
            android:onClick="getUserDetails"/>

    </LinearLayout>

    <Button
        android:id="@+id/RequestPermissions"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Request some permissions"
        android:onClick="requestPermissions"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/GetLeaderBoard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Leaders"
            android:onClick="getLeaderboard"/>

        <Button
            android:id="@+id/TriggerEvent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Trigger Evt"
            android:onClick="triggerEvent"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Get Score"
            android:onClick="getScore"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Invite user"
        android:onClick="inviteUser"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Check evt with ID"
        android:onClick="checkEvent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Set App Data"
            android:onClick="setAppData"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Get App Data"
            android:onClick="getAppData"/>

    </LinearLayout>


    <TextView
        android:id="@+id/TextLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="#ffff00"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:maxLines="1000"/>

</LinearLayout>
